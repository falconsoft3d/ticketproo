# TicketProo - Variables de Entorno para Producción
# Copia este archivo como .env y modifica los valores según tu configuración

# === CONFIGURACIÓN DJANGO ===
DEBUG=False
SECRET_KEY=tu-clave-super-secreta-cambiar-en-produccion
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# === CERTIFICADOS SSL ===
# Dominio principal para certificados (sin https://)
DOMAIN=tu-dominio.com
# Email para Let's Encrypt
CERTBOT_EMAIL=admin@tu-dominio.com
# Usar staging para testing (1) o producción (0)
CERTBOT_STAGING=0

# === BASE DE DATOS ===
# Opción 1: URL completa de base de datos
DATABASE_URL=postgresql://postgres:postgres123@db:5432/ticketproo

# Opción 2: Configuración individual (usar si no tienes DATABASE_URL)
# DB_NAME=ticketproo
# DB_USER=postgres
# DB_PASSWORD=postgres123
# DB_HOST=db
# DB_PORT=5432

# === SEGURIDAD HTTPS (para producción) ===
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# === EMAIL (opcional) ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-app
DEFAULT_FROM_EMAIL=noreply@tu-dominio.com

# === REDIS (opcional, para cache y Celery) ===
REDIS_URL=redis://redis:6379/0

# === POSTGRESQL (para docker-compose) ===
POSTGRES_DB=ticketproo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123